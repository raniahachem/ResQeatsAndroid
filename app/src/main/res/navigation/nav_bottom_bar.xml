<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bottom_bar"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="tn.esprit.resqeatsandroid.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_to_restaurantProductsFragment"
            app:destination="@id/restaurantProductsFragment" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_cart"
            app:destination="@id/fragment_cart" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_profile"
            app:destination="@id/fragment_profile" />
    </fragment>

    <fragment
        android:id="@+id/restaurantProductsFragment"
        android:name="tn.esprit.resqeatsandroid.ui.fragments.RestaurantProductsFragment"
        android:label="fragment_restaurant_products"
        tools:layout="@layout/fragment_restaurant_products" >
        <action
            android:id="@+id/action_restaurantProductsFragment_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>

    <fragment
        android:id="@+id/fragment_cart"
        android:name="tn.esprit.resqeatsandroid.ui.fragments.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_fragment_cart_to_fragment_profile"
            app:destination="@id/fragment_profile" />
        <action
            android:id="@+id/action_fragment_cart_to_fragment_home"
            app:destination="@id/fragment_home" />
        <action
            android:id="@+id/action_fragment_cart_to_checkout_fragment"
            app:destination="@id/checkout_fragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_profile"
        android:name="tn.esprit.resqeatsandroid.ui.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_fragment_profile_to_fragment_cart"
            app:destination="@id/fragment_cart" />
        <action
            android:id="@+id/action_fragment_profile_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>
    <fragment
        android:id="@+id/checkout_fragment"
        android:name="tn.esprit.resqeatsandroid.ui.fragments.CheckoutFragment"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout" >
        <action
            android:id="@+id/action_checkout_fragment_to_payment_fragment"
            app:destination="@id/payment_fragment" />
    </fragment>

    <fragment
        android:id="@+id/payment_fragment"
        android:name="tn.esprit.resqeatsandroid.ui.fragments.PaymentFragment"
        android:label="@layout/fragment_payment" />

</navigation>